<script>
  (function(){
    $(document).on('updated', '.calculator-filter .checkbox-rect', function(evt){
      evt.stopPropagation();
      filter();
    })
  
    $(document).on('click', function(evt){
      if($(evt.target).parents('.calculator-filter').length == 0){
        $('.calculator-filter ul').addClass('hide');
      }
    })
  
    $(document).on('click', '.calculator-filter .drop-list', function(evt){
      if($(evt.target).parents('.options').length == 0)
        $('.calculator-filter ul').toggleClass('hide');
    })
  
    $(document).on('click', '.calculator-filter .options li', function(evt){
      if($(evt.target).hasClass('checkbox-rect')){
        return;
      }
      // text was clicked
      // get options and filter results
      var index = $(evt.target).index();
      if( index == 0){
        // select all was selected
        $('.calculator-filter .checkbox-rect').addClass('active');
      }
    
      if( index == 1){
        // clear all was selected
        $('.calculator-filter .checkbox-rect').removeClass('active');
      }
      $(this).find('.checkbox-rect').toggleClass('active');
      filter();
    })
  
  
    function filter(){
      var value = [];
      var valueStr = "";
      $('.calculator-filter .checkbox-rect.active').each(function(){
        if($(this).parent().text() != "选择所有" && $(this).parent().text() != "清空所有"){
          valueStr += $(this).parent().text().replace(/[\s\n]/g, "") + ','
          value.push($(this).parent().text().replace(/[\s\n]/g, ""));
        }
      })
      valueStr = valueStr.substring(0, valueStr.length-1);
      if(valueStr.length > 15)
        valueStr = valueStr.substring(0, 15) + "...";
      $('.calculator-filter .value').text(valueStr);
      if(value.length == 0){
        // nothing was selected, show all
        $('#calculator .service').removeClass('hide');
        return;
      }
      // start filter
      $('#calculator .service .cal_temp_name').each(function(){
        var foundFlag = false;
        var that = this;
        _(value).each(function(valueItem){
          if($(that).text().replace(/[\s]/g, '').startsWith(valueItem.replace().replace(/[\s]/g, '')))
            foundFlag = true;
        })
        if(!foundFlag)
          $(this).parent().addClass('hide');
        else
          $(this).parent().removeClass('hide');
      })
    }
  })();
</script>
